source 'http://rubygems.org'

gem 'rails', '~> 3.1.1'

gem 'pg'
gem 'sqlite3'
gem 'jquery-rails'
gem 'bcrypt-ruby', '~> 3.0.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
  gem 'ir_b'
  gem 'steak'
end

group :test do
  gem 'capybara'
  gem 'rspec-rails'
  gem 'selenium-webdriver'
  gem 'database_cleaner'
  gem 'launchy'
end
