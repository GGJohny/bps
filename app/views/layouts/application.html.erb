<!DOCTYPE html>
<html>
<head>
  <title>BPS</title>

  <%= stylesheet_link_tag 'application' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag '/blueprint/ie'%><![endif]-->
  <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
  
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="prepend-3 span-15 append-6 last">
    
      <header id="header">
        <%= link_to root_path do %>
          <h2>Bitcoin Payment Service</h2>
        <% end %>
      </header>
      <% if flash[:success] %>
        <p class="flash success"><%= flash[:success] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="flash notice"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:error] %>
        <p class="flash error"><%= flash[:error] %></p>
      <% end %>    
      <section id="main">
        <%= yield %>
      </section>
      <footer>
        <%= render partial: 'layouts/dev_bar' if Rails.env.development? %>
      </footer>
    </div>
  </div>
</body>
</html>
